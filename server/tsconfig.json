{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Output */
    "outDir": "./dist",
    "sourceMap": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Modules */
    "isolatedModules": false,
    "verbatimModuleSyntax": false,

    /* Node types */
    "types": ["node"]
  },

  "include": ["src"]
}
